{{>layout/header}}
    <!--페이지 로딩 속도를 높이기 위해 header에 css, footer에 js위치-->

<h1>스프링 부트로 시작하는 웹서비스 ver.2</h1>
<h2>게시글</h2>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>

    </div>
    <br>
    <!--목록출력 영역-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">

        <!--posts라는 List 순회 (자바의 for문)-->
        {{#posts}}
            <tr>
                <td>{{id}}</td>

                <!--List에서 뽑아낸 객체의 필드 사용-->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}}
